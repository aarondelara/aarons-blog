<main class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Dashboard</h1>
            <a href="/newpost" class="btn btn-success">Create a New Blog Post</a>
        </div>
    </div>
    <br>
    <h1 class="mb-4">Blog Posts:</h1>
    {{#each posts}}
    <div class="post-container post mb-3 border">
        <h2><a href="/post/{{id}}" class="text-decoration-none text-reset">{{title}}</a></h2>
        <p>{{user.username}} | {{format_date createdAt}}</p>
        <a href="/editpost/{{id}}" class="btn btn-primary">Edit Post</a>
        <button class="btn btn-danger delete-post" data-post-id="{{id}}">Delete</button>
    </div>
    {{/each}}
</main>